<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="Eng"
        android:entries="@array/lang_use_show"
        android:entryValues="@array/lang_use_values"
        android:key="languge"
        android:summary="English"
        android:title="Languge" />



    <ListPreference
        android:defaultValue="a"
        android:entries="@array/theme_display_key_word"
        android:entryValues="@array/theme_values"
        android:key="Font_Style"
        android:title="Font Style" />


    <ListPreference
        android:defaultValue="s1"
        android:entries="@array/theme_display_key_word"
        android:entryValues="@array/theme_values"
        android:key="theme"
        android:title="App Style" />



</PreferenceScreen>
