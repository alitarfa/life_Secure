<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen  xmlns:android="http://schemas.android.com/apk/res/android">


    <PreferenceCategory
        android:title="Account"
        android:key="key_compte">

        <Preference android:title="Changer Profile" >
            <intent android:action="changeProfile"

                />
        </Preference>

        <Preference android:title="Password" >
            <intent android:action="go.to.Blurpass"
                />
        </Preference>

        <Preference android:title="Pattern" >
            <intent
                android:action="go.to.setPattern"
                />
        </Preference>

    </PreferenceCategory>


    <PreferenceCategory
        android:title="Historique"
        android:key="key_historique">
        <SwitchPreference
            android:key="histo"
            android:title="don't remember me"
            android:defaultValue="false"
            />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="StyleBackround"
        android:key="key_Theme">

        <ListPreference
            android:key="theme"
            android:title="SelectTheme"
            android:entries="@array/theme_values"
            android:entryValues="@array/theme_values"
            android:defaultValue="one"
            />


    </PreferenceCategory>



</PreferenceScreen>